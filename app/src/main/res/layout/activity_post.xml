<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/PostBackColors"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    android:paddingHorizontal="15sp"
    android:paddingVertical="15sp"
    tools:context=".Event">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#ECECEC"
        app:cardCornerRadius="8dp"
        app:cardElevation="30dp"
        app:cardMaxElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:paddingVertical="10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/postUserImage"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        tools:src="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/postDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:drawableStart="@drawable/ic_baseline_calendar_month_24"
                        android:drawablePadding="5dp"
                        android:drawableTint="#7E7E7E"
                        android:gravity="center_vertical"
                        android:paddingStart="10dp"
                        android:text="@string/post_default_text"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/postTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_access_time_24"
                        android:drawablePadding="5dp"
                        android:drawableTint="#7E7E7E"
                        android:gravity="center_vertical"
                        android:paddingStart="10dp"
                        android:text="@string/post_default_text"
                        android:textSize="11sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/unverifiedFlag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_error_outline_24"
                        android:drawablePadding="5dp"
                        android:drawableTint="#7E7E7E"
                        android:gravity="center_vertical"
                        android:paddingStart="10dp"
                        android:text="@string/post_unverified"
                        android:textSize="11sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/verifiedFlag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_check_circle_outline_24"
                        android:drawablePadding="5dp"
                        android:drawableTint="#7E7E7E"
                        android:gravity="center_vertical"
                        android:paddingStart="10dp"
                        android:text="@string/post_verified"
                        android:textSize="11sp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp">

                    <TextView
                        android:id="@+id/postName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/post_default_username"
                        android:textColor="#EE8000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/postUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/post_default_username"
                        android:textColor="#7E7E7E"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/postTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/post_default_text"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/postDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/post_default_text"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/postImage"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="5dp"
                        android:maxHeight="150dp"
                        android:visibility="gone"
                        tools:src="@tools:sample/backgrounds/scenic" />

                    <VideoView
                        android:id="@+id/postVideo"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="5dp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="7"
                android:background="#7E7E7E" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/postLocalization"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_marker"
                    android:drawablePadding="5dp"
                    android:drawableTint="#7E7E7E"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:text="@string/ev_localization"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/postInterested"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_baseline_favorite_border_24"
                    android:drawablePadding="5dp"
                    android:drawableTint="#EE8000"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:text="@string/ev_interested" />

                <TextView
                    android:id="@+id/postShare"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_baseline_send_24"
                    android:drawablePadding="5dp"
                    android:drawableTint="#7E7E7E"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:text="@string/ev_share" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>