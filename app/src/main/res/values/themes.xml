<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UBItouch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Font Style -->
        <item name="android:fontFamily">@font/abeezeeregular</item>
    </style>

    <!--  Main colors  -->
    <style name="MainColorStyle">
        <item name="android:background">@color/blue</item>
    </style>

    <!-- Login colors -->
    <style name="LoginTextStyle">
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="LoginButtonStyle">
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Register colors -->
    <style name="RegisterTextStyle">
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="RegisterButtonStyle">
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Feed colors -->
    <style name="FeedTextStyle">
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="FeedButtonStyle">
        <item name="backgroundTint">@color/orange</item>
    </style>

    <!-- Profile colors -->
    <style name="ProfileNameStyle">
        <item name="android:textColor">@color/orange</item>
    </style>
    <style name="ProfileUsernameStyle">
        <item name="android:textColor">@color/darkGrey</item>
    </style>
    <style name="ProfileBioStyle">
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="ProfileButtonStyle">
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Edit Profile colors -->
    <style name="EPButtonStyle">
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <!-- Post colors -->
    <style name="PostCardColor">
        <item name="android:backgroundTint">@color/grey</item>
    </style>
    <style name="PostCardIconColor">
        <item name="android:drawableTint">@color/darkGrey</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="PostNameStyle">
        <item name="android:textColor">@color/orange</item>
    </style>
    <style name="PostUsernameStyle">
        <item name="android:textColor">@color/darkGrey</item>
    </style>
    <style name="PostTextColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Create colors -->
    <style name="CreateNameStyle">
        <item name="android:textColor">@color/orange</item>
    </style>
    <style name="CreateUsernameStyle">
        <item name="android:textColor">@color/darkGrey</item>
    </style>
    <style name="CreateTextStyle">
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="CreateIconStyle">
        <item name="android:drawableTint">@color/darkGrey</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Setting colors -->
    <style name="SettingTextStyle">
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="SettingCardStyle">
        <item name="android:backgroundTint">@color/grey</item>
    </style>
    <style name="SettingCardIconStyle">
        <item name="android:backgroundTint">@color/blue</item>
    </style>
    <style name="SettingCardTextStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Security Colors -->
    <style name="SecurityTextStyle">
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="SecurityCardStyle">
        <item name="android:backgroundTint">@color/grey</item>
    </style>
    <style name="SecurityCardIconStyle">
        <item name="android:backgroundTint">@color/blue</item>
    </style>
    <style name="SecurityCardTextStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Change Password Colors -->
    <style name="CPTextStyle">
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="CPButtonStyle">
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Delete Colors -->
    <style name="DeleteTextStyle">
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="DeleteButtonStyle">
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Language Colors -->
    <style name="LanguageColorsStyle">
        <item name="android:backgroundTint">@color/blue</item>
    </style>

    <!-- Footer Colors -->
    <style name="FooterColorStyle">
        <item name="android:background">@color/blue</item>
    </style>

    <!-- Header Colors-->
    <style name="HeaderIconColorsStyle">
        <item name="android:strokeColor">@color/blue</item>
    </style>
    <style name="HeaderButtonStyle">
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <!-- Arrows Colors -->
    <style name="ArrowColorStyle">
        <item name="android:tint">@color/blue</item>
    </style>
</resources>